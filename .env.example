# Database
DATABASE_URL="postgresql://user:pass@localhost:5432/wrx_framing?schema=public"

# Auth
AUTH_SECRET="change-me-please-long-random-string"
STAFF_SEED_ADMIN_EMAIL="admin@westroxburyframing.com"
STAFF_SEED_ADMIN_PASSWORD="change-me-8chars-min"

# Square
SQUARE_ENV="sandbox" # sandbox|production
SQUARE_ACCESS_TOKEN="your_square_access_token"
SQUARE_LOCATION_ID="your_square_location_id"

# Mailchimp
MAILCHIMP_API_KEY="your_mailchimp_api_key"
MAILCHIMP_AUDIENCE_ID="your_audience_id"
MAILCHIMP_SERVER_PREFIX="usX"  # from your API key (e.g., us7)

# Storage (S3-compatible)
STORAGE_REGION="us-east-1"
STORAGE_BUCKET="wrx-framing"
STORAGE_ACCESS_KEY="..."
STORAGE_SECRET_KEY="..."
STORAGE_PUBLIC_BASE_URL="https://cdn.yoursite.com" # or bucket public URL
STORAGE_ENDPOINT="" # optional for non-AWS

# Email (transactional)
EMAIL_PROVIDER="postmark" # or sendgrid
EMAIL_PROVIDER_API_KEY="..."
EMAIL_FROM="West Roxbury Framing <info@westroxburyframing.com>"
STAFF_NOTIFICATIONS_EMAIL="info@westroxburyframing.com"
